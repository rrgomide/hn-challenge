{
  "name": "hn-challenge-raphael-gomide",
  "private": true,
  "scripts": {
    "dev": "cd docker && docker compose up --build -d mongodb && cd .. && cross-env NODE_ENV=development pnpm run --parallel dev",
    "build": "pnpm --filter @hn-challenge/shared build && pnpm --filter @hn-challenge/backend build && pnpm --filter @hn-challenge/frontend build",
    "start": "pnpm run --recursive start",
    "lint": "pnpm run --recursive lint",
    "typecheck": "pnpm run --recursive typecheck",
    "typegen": "react-router typegen",
    "test:backend": "pnpm --filter @hn-challenge/backend test",
    "test:frontend": "pnpm --filter @hn-challenge/frontend test",
    "docker:up": "cd docker && docker compose up --build",
    "docker:down": "cd docker && docker compose down",
    "docker:logs": "cd docker && docker compose logs -f",
    "docker:restart": "pnpm docker:down && pnpm docker:up"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.1"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
