{
  "name": "hn-challenge-raphael-gomide",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @hn-challenge/shared build && docker compose -f docker/docker-compose.yml up --build -d mongodb && cross-env NODE_ENV=development pnpm run --parallel dev",
    "build": "pnpm --filter @hn-challenge/shared build && pnpm --filter @hn-challenge/backend build && pnpm --filter @hn-challenge/frontend build",
    "start": "pnpm run --recursive start",
    "lint": "pnpm run --recursive lint",
    "typecheck": "pnpm run --recursive typecheck",
    "typegen": "react-router typegen",
    "test:backend": "pnpm --filter @hn-challenge/backend test:run",
    "test:frontend": "pnpm --filter @hn-challenge/frontend test:run",
    "docker:up": "docker compose -f docker/docker-compose.yml up --build",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:restart": "pnpm docker:down && pnpm docker:up",
    "postinstall": "pnpm --filter @hn-challenge/shared build",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "cross-env": "^10.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.1"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
